@model UsuarioModel
@{
    ViewData["title"] = "Confirmação de exclusão";
}

<div class="row justify-content-center">
    <div class="text-center col-8 col-md-8 col-lg-6">
        <h3>Deseja realmente excluir o contato (@Model.Nome) ?</h3>
    </div>
    <a class="btn btn-danger col-8 col-md-8 col-lg-8 btn-block" role="button" asp-controller="Usuario" asp-action="Deletar" asp-route-id="@Model.Id">Confirmar</a>
    <a class="btn btn-secondary col-8 col-md-8 col-lg-8 btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
</div>