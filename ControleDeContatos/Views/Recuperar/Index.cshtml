@model EmailModel
@{
    Layout = "_Layout_Deslogada";
    ViewData["Title"] = "Rcuperação de senha";
}

<div id="telaLogin">

    @if (TempData["Success"] != null)
    {
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
    }

    @if (TempData["Fail"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Fail"]
        </div>
    }
    <div class="row justify-content-center align-items-center">
        <form class="form-signin col-8 col-md-6 col-lg-4" method="post" asp-controller="Recuperar" asp-action="Enviar">

            <h1 class="h3 mb-3 font-weight-normal text-center" accesskey="">Recuperar senha</h1>
            <label for="inputEmail" class="sr-only">Usuário</label>
            <input asp-for="Usuario" type="text" id="inputLogin" class="form-control" placeholder="Digite seu usuário" required="" autofocus="">
            @Html.ValidationMessageFor(x => x.Usuario)
            <label for="inputEmail" class="sr-only">Senha</label>
            <input asp-for="Email" type="email" id="inputEmail" class="form-control" placeholder="Digite o e-mail correspondente" required="">
            @Html.ValidationMessageFor(x => x.Email)
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar</button>
            <a role="button" class="btn btn-secondary btn-block" asp-controller="Login" asp-action="Index">Voltar</a>
            <p class="mt-5 mb-3 text-muted">© 2023</p>
        </form>
    </div>
</div>